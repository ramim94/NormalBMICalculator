<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"          android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_layout_data_primary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:id="@+id/each_data_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="BMI: "
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/each_data_height"
            android:textSize="18dp"
            android:text="Height: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/each_data_weight"
            android:textSize="18dp"
            android:text="Weight: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <TextView
        android:layout_below="@id/lin_layout_data_primary"
        android:id="@+id/each_data_dateTime"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>